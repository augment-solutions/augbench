# LLM Evaluator (for LLM-assessed metrics)
LLM_PROVIDER=openai
LLM_API_KEY=your_api_key_here
LLM_MODEL=gpt-4

# GitHub access (for PR_Recreate mode)
GH_TOKEN=your_github_token_here

# Optional: OpenAI-compatible LLM endpoint
LLM_OPENAI_ENDPOINT=https://api.openai.com/v1

# Optional: Anthropic support
LLM_ANTHROPIC_ENDPOINT=https://api.anthropic.com
LLM_ANTHROPIC_VERSION=2023-06-01
LLM_ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: Local LLM endpoint (e.g., Ollama)
LLM_LOCAL_ENDPOINT=http://localhost:11434/api/generate
